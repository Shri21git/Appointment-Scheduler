<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/normalize.css" />
    <link rel="stylesheet" href="/main/styles.css" />
    <link rel="stylesheet" href="/forms/forms.css" />
    <title><%= pageTitle %></title>
  </head>
  <body>
    <header><%- include("../views/includes/nav.ejs") %></header>
    <main>
      <div id="content">
        <div class="form-container">
          <form action="/login" method="post" autocomplete="off">
            <div class="form-control">
              <label for="name">Username</label>
              <input name="name" type="text" required/>
            </div>
            <div class="form-control">
              <label for="password">Password</label>
              <input name="password" type="password" required/>
            </div>
            <input type="hidden" name="_csrf" value="<%=csrfToken %>" />
            <button class="btn" type="submit">Login</button>
          </form>
          <input type="hidden" id="checkLogin" value="<%=login %>">
        </div>
      </div>
    </main>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    var login = document.getElementById('checkLogin');
    if(login.value == 'notfound'){
      Swal.fire({
        title: "Oops..!",
        text: "No account found!",
        icon: "error",
      });
    } else if(login.value == 'invalid'){
      Swal.fire({
        title: "Oops..!",
        text: "Invalid credentials!",
        icon: "error",
      });
    }
  </script>
</html>
